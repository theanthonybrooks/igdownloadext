{
  "manifest_version": 3,
  "name": "Profile Picture Downloader",
  "version": "1.1.0",
  "description": "Downloads profile pictures from webpages ðŸ˜±.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "notifications",
    "clipboardWrite"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "IG Profile Picture Downloader",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
